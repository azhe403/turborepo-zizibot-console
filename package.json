{
  "name": "turborepo-shadcn-ui",
  "version": "1.5.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "tailadmin-console": "turbo run dev --filter=@apps/tailadmin-console --filter=\"./packages/*\"",
    "shadcn-console": "turbo run dev --filter=@apps/shadcn-console --filter=\"./packages/*\"",
    "shadcn-console-build": "turbo run build --filter=@apps/shadcn-console --filter=\"./packages/*\"",
    "build": "turbo run build",
    "clean": "turbo clean",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "prettier": "catalog:",
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "volta": {
    "node": "20.17.0",
    "pnpm": "9.12.0"
  }
}
